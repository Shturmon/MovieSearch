@model MovieSearch.Web.Models.MovieViewModel

@Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DirectorId, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DirectorId, Model.Directors)
            @Html.ValidationMessageFor(model => model.DirectorId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PremiereDate, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PremiereDate)
            @Html.ValidationMessageFor(model => model.PremiereDate)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Desctiption, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Desctiption)
            @Html.ValidationMessageFor(model => model.Desctiption)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CountryId, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CountryId, Model.Countries)
            @Html.ValidationMessageFor(model => model.CountryId)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageId, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="file" id="ImageId" />
            @Html.ValidationMessageFor(model => model.ImageId)
        </div>
    </div>
        
    <div class="form-group">
        @Html.LabelFor(model => model.Genres, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <table>
                <tr>
                @{
                    var countGenres = 0;
                    foreach (var genre in Model.GenreList)
                    {
                        if (countGenres++ % 3 == 0)
                        {
                            @:</tr> <tr>
                        }
@:
                        <td>
                            <input type="checkbox" name="selectedGenres" value="@genre.GenreId"
                                @(Html.Raw(genre.Choosen ? "checked=\"checked\"" : "")) />
                            @genre.Title
                        </td>
                    }
                    @: </tr>
                }
            </table>
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.CastAndCrews, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <table>
                <tr>
                    @{
                        var countActors = 0;
                        foreach (var actor in Model.ActorsList)
                        {
                            if (countActors++ % 3 == 0)
                            {
                                @: </tr><tr>
                            }
                            @:
                            <td>
                                <input type="checkbox" name="selectedActors" value="@actor.ActorId"
                                       @(Html.Raw(actor.Choosen ? "checked=\"checked\"" : "")) />
                                @actor.FullName
                            </td>
                        }
                        @: </tr>
                    }
                </table>
            </div>
        </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
